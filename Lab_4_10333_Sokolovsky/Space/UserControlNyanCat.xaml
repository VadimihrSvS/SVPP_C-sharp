<UserControl x:Class="Space.UserControlNyanCat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Space"
             mc:Ignorable="d" 
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             d:DesignHeight="186" d:DesignWidth="150">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="16px"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlockHp" Foreground="White" FontSize="17" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textBlockSpeed" Grid.Row="1" Visibility="Hidden" Foreground="White" FontSize="13" HorizontalAlignment="Center"/>
        <Image gif:AnimationBehavior.SourceUri="/images/nyan-cat/nyan-cat.gif" Grid.Row="2"/>

    </Grid>
</UserControl>
